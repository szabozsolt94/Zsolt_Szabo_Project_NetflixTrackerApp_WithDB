@{
    ViewData["Title"] = "Watch Later";
}

<div class="container">
    <h1>Movies to Watch Later</h1>

    <!-- Loop through the movies and display them -->
    @foreach (var movieId in Model)
    {
        <div class="card">
            <h3>Movie Title: @movieId</h3>
            <!-- Add button logic here if you want to allow users to remove the movie from the list -->
            <form method="post" action="/WatchLater/add">
                <input type="hidden" name="movieID" value="@movieId" />
                <input type="hidden" name="userID" value="1" /> <!-- Replace with dynamic user ID -->
                <button type="submit">Remove</button>
            </form>
        </div>
    }
</div>
